#include <iostream>
#include <cstdio>
using namespace std;
void InsertSort(int *,int);
void input(int *,int);
int main()
{
	int a[10] = {11,513,63,2,56,34,617,48,154,324};
	int len = sizeof(a)/sizeof(int);
	cout << "排序前：" << endl;
	input(a,len);
	InsertSort(a,len);
	cout << "\n\n排序后(插入排序)：" << endl;
	input(a,len);
	return 0;
}
void InsertSort(int *a, int len)
{
    for(int i = 1; i < len; i++)//从第一个元素开始，该元素可以认为已经被排序
	{
        int temp = a[i]; //取出下一个元素 
        int j; 
        for(j = i-1; j >= 0; j--) //利用循环寻找已排序的元素中小于或者等于新元素的位置
		{
            //如果该元素（已排序）大于取出的新元素，将该元素移到下一位置
            if(a[j] > temp){
               a[j+1] = a[j];
            }
            else{
               break;
            }
        }
        a[j+1] = temp;//将新元素插入到该位置后 
    }
}
void input(int *a,int len)  //用于输出数组的函数 
{
	for(int i = 0;i < len;i++)
	{
		cout << a[i] << "\t";
	}
}
