#include <iostream>
#include <cstdio>
using namespace std;
void QuickSort(int [],int,int);
void input(int *,int);
int main()
{
	int a[10] = {11,63,53,2,56,34,817,48,154,424};
	int len = sizeof(a)/sizeof(int);
	cout << "排序前：" << endl;
	input(a,len);
	QuickSort(a,0,len - 1);
	cout << "\n\n排序后(快速排序)：" << endl;
	input(a,len);
	return 0;
}
void QuickSort(int a[], int left, int right) 
{
    int i,j,temp;
    if(left > right)
        return;
    temp = a[left];//temp中存着基准数
    i = left;
    j = right;
    while(i < j)
	{
        //从右往左找比基准数大的元素
        while(a[j] >= temp &&i < j)
            j--;
        //从左往右找比基准数小的元素
        while(a[i] <= temp && i < j)
            i++;
        //交换两个数在数组的位置
        if(i < j){
            int t = a[i];
            a[i] = a[j];
            a[j] = t;
        }
    }
    //基准数归位
    a[left] = a[i];
    a[i] = temp;

    QuickSort(a,left,i - 1);//递归基准数左边的数组 
    QuickSort(a,i + 1,right);//递归基准数右边的数组 
}
void input(int *a,int len)  //用于输出数组的函数 
{
	for(int i = 0;i < len;i++)
	{
		cout << a[i] << "\t";
	}
}
